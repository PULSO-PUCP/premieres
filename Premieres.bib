	date = {2022-03-17},
	langid = {spanish},
	note = {Number: 1},
	keywords = {desempeño institucional, gabinete, influencia política, ministerios, secretarías de Estado},
}

@article{martinez-gallardo_out_2012,
	title = {Out of the Cabinet: What Drives Defections From the Government in Presidential Systems?},
	volume = {45},
	issn = {0010-4140, 1552-3829},
	url = {http://journals.sagepub.com/doi/10.1177/0010414011421306},
	doi = {10.1177/0010414011421306},
	shorttitle = {Out of the Cabinet},
	abstract = {This article challenges a key part of the conventional view of coalitions in presidential systems that sees them as short-lived and ad hoc. The author shows instead that there is wide variation in the durability of governing coalitions across these regimes. She develops a theory of the incentives of parties to participate in the government and the circumstances under which scholars might expect to see the existing governing coalition break down.The author draws on data from 121 cabinets in 12 Latin American countries between the late 1980s and the mid-2000s to show that the dissolution of the cabinet is more likely when the president places less value on coalition building as a policy-making strategy and when parties find it costly to participate in the government. In particular, the author shows that strong unilateral institutional powers tend to diminish the incentives of presidents to compromise with other parties; in contrast, effective legislatures and high rates of approval for the executive contribute significantly to more stable governments.},
	pages = {62--90},
	number = {1},
	journaltitle = {Comparative Political Studies},
